package newyeargift;

public class Chocolate implements NewYearGift
{
    int weight;int price;
    public Chocolate(int weight, int price)
    {
    	this.weight = weight;
    	this.price = price;
    }
    public Chocolate() {
		// TODO Auto-generated constructor stub
	}
	public int getWeight()
    {
    	return weight;
    }
    public int getPrice()
    {
    	return price;
    }
	public void bsort(String[] arr, int[] price, double[] weight)
		// TODO Auto-generated method stub
		{
			int i,j,ptemp;
			double wtemp;
			String ctemp;
			for(i=0;i<4;i++)
			{
				for(j=0;j<4-i;j++)
				{
					if(price[j]>price[j+1])
					{
						ptemp=price[j];
						price[j]=price[j+1];
						price[j+1]=ptemp;
						
						wtemp=weight[j];
						weight[j]=weight[j+1];
						weight[j+1]=wtemp;
						
						ctemp=arr[j];
						arr[j]=arr[j+1];
						arr[j+1]=ctemp;
					}
				}
			}
		}
	public void show(String[] arr, int[] price, double[] weight)
	{
		// TODO Auto-generated method stub
		for(int i=0;i<5;i++)
		{
			System.out.println("Product: "+arr[i]+" Price: "+price[i]+" Weight: "+weight[i]);
		}
	}
	public void rshow(String[] arr, int[] price, double[] weight, int myrange) {
		// TODO Auto-generated method stub
		for(int i=0;i<5;i++)
		{
			if(price[i]<=myrange)
			{
				System.out.println("Product: "+arr[i]+" Price: "+price[i]+" Weight: "+weight[i]);
			}
		}	
	}
}
